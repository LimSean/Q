<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".customer.Cust_Search_Merchant">

    <LinearLayout
        android:id="@+id/cme_LY01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <!--SearchView
            android:id="@+id/cme_editTxt_SearchBar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/seach_layout"
            android:queryHint="Queue ID / Name"
            android:searchHintIcon="@null"
            android:iconifiedByDefault="false"
            android:searchIcon="@null"
             /-->
        <EditText
            android:id="@+id/testcme_editTxt_SearchBar"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/seach_layout"
            android:ems="10"
            android:hint="Queue ID / Store / Event Nam"
            android:inputType="textPersonName"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textColor="#adadad"
            android:windowSoftInputMode="adjustNothing">

        </EditText>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/cme_editTxt_SearchBar"
            android:layout_toStartOf="@+id/cme_editTxt_SearchBar"
            android:adjustViewBounds="false"
            android:padding="5dp"
            app:srcCompat="@drawable/search_icon2" />

    </LinearLayout>

    <Button
        android:id="@+id/testBtnSearchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cme_LY02"
        android:text="&#62;" />
    <LinearLayout
        android:id="@+id/cme_LY02"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="74dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/testSearchText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:text="Result"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/testmerchant_search_list"
        android:layout_width="match_parent"
        android:layout_height="474dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"></android.support.v7.widget.RecyclerView>
</RelativeLayout>